{
  "name": "dmptool-ui",
  "version": "1.0.0",
  "description": "The UI for the DMPTool Website",
  "scripts": {
    "serve": "npm-run-all clean --parallel watchimages watchstyles watchjs parcel-dev fractal-dev --silent",
    "build": "run-s clean minifyimages parcel-build fractal-build --silent",
    "publish": "run-s clean minifyimages parcel-build fractal-build github-pages --silent",
    "clean": "del dist ui-assets",
    "fractal-dev": "fractal start --sync --watch",
    "fractal-build": "fractal build",
    "parcel-dev": "parcel watch main.scss main.js --dist-dir ui-assets --public-url . --no-cache",
    "parcel-build": "parcel build main.scss main.js --dist-dir ui-assets --public-url . --no-cache --no-source-maps",
    "watchimages": "onchange -i images -- npm run minifyimages",
    "watchstyles": "onchange -i main.scss scss/* -- npm run lintstyles",
    "watchjs": "onchange -i main.js js/* -- npm run lintjs",
    "minifyimages": "imagemin images/* --out-dir=ui-assets/images",
    "lintstyles": "stylelint main.scss scss/*",
    "lintjs": "standard main.js js/* --verbose | snazzy || exit 0",
    "postinstall": "echo Adding style attributes to Font Awesome sprite paths ... && replace-in-file --configFile=replace-in-file.config.js",
    "github-pages": "gh-pages -d dist",
    "pa11y": "pa11y --runner axe --runner htmlcs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cdlib/dmptool-ui.git"
  },
  "author": "JoelCDL",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cdlib/dmptool-ui/issues"
  },
  "homepage": "https://github.com/cdlib/dmptool-ui#readme",
  "devDependencies": {
    "@fortawesome/fontawesome-pro": "^5.15.3",
    "@frctl/fractal": "^1.5.6",
    "@frctl/mandelbrot": "^1.9.0",
    "@parcel/transformer-sass": "^2.0.0-beta.2",
    "del-cli": "^3.0.1",
    "faker": "^5.5.3",
    "gh-pages": "^3.1.0",
    "imagemin-cli": "^6.0.0",
    "modern-normalize": "^1.0.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "pa11y": "^6.0.0",
    "parcel": "^2.0.0-beta.2",
    "postcss-logical": "^4.0.2",
    "postcss-svg": "^3.0.0",
    "replace-in-file": "^6.2.0",
    "snazzy": "^9.0.0",
    "source-sans": "^3.28.0",
    "standard": "^16.0.3",
    "stylelint": "^13.12.0",
    "stylelint-config-property-sort-order-smacss": "^7.0.0",
    "stylelint-config-sass-guidelines": "^8.0.0",
    "stylelint-config-standard": "^21.0.0",
    "stylelint-use-logical": "^1.1.0"
  },
  "browserslist": [
    "> 1% in my stats"
  ],
  "stylelint": {
    "defaultSeverity": "warning",
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-sass-guidelines",
      "stylelint-config-property-sort-order-smacss"
    ],
    "plugins": [
      "stylelint-use-logical"
    ],
    "rules": {
      "at-rule-empty-line-before": [
        "always",
        {
          "ignore": [
            "blockless-after-blockless",
            "first-nested"
          ]
        }
      ],
      "csstools/use-logical": "always",
      "max-nesting-depth": [
        1,
        {
          "ignore": [
            "blockless-at-rules",
            "pseudo-classes"
          ],
          "ignoreAtRules": [
            "include",
            "media",
            "supports"
          ]
        }
      ],
      "order/properties-alphabetical-order": null,
      "selector-class-pattern": null,
      "rule-empty-line-before": "always"
    }
  }
}
